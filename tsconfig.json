{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["astro/client"] // Astroの型定義を含める
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.astro"],
    "exclude": ["node_modules"]
}
